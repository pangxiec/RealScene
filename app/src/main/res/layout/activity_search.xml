<?xml version="1.0" encoding="utf-8"?>
<com.cj.baidunavi.MConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ccl"
        android:layout_width="match_parent"
        android:background="#FFF5F7FA"
        android:layout_height="match_parent"
        tools:context=".ui.Search2Activity">
    <LinearLayout
            android:id="@+id/ll_search"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_white_circle2"
            android:layout_marginTop="10dp"
            android:minHeight="50dp"
            android:padding="5dp"
            android:elevation="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/iv_back"
                android:minWidth="40dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <AutoCompleteTextView
                android:id="@+id/searchkey"
                android:layout_gravity="center_vertical"
                android:textCursorDrawable="@drawable/shapre_cursor"
                android:background="@null"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入联想关键字"
                android:textColor="@android:color/black" />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_poi"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@android:color/white"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_search"
            android:layout_width="0dp"
            android:layout_height="80dp">
        <LinearLayout
                android:id="@+id/ll1"
                android:clickable="true"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/canting1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv1"
                    tools:text="主教"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll2"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/canting2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    tools:text="图书馆"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll3"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/canting3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    tools:text="逸夫楼"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll4"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@drawable/canting4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    tools:text="博学楼"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:id="@+id/tv_history"
            android:text="历史搜索"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_poi"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ListView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_white_circle2"
            app:layout_constraintTop_toBottomOf="@+id/tv_history"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/history_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
            android:id="@+id/tv_clear_history"
            app:layout_constraintTop_toBottomOf="@+id/history_list"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="清除历史记录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ListView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_white_circle2"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/ll_search"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/sug_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
</com.cj.baidunavi.MConstraintLayout>