<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.PlanActivity">
    <com.baidu.mapapi.map.MapView
            android:id="@+id/mapview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    <LinearLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/white"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="8dp"
                android:background="@drawable/bg_gray_rect"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/greendot"
                    android:src="@drawable/green_circle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/btn_navi1"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_navi1"
                    app:layout_constraintTop_toTopOf="@+id/btn_navi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/btn_navi1"
                    android:text="from"
                    android:minHeight="30dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    app:layout_constraintLeft_toRightOf="@+id/greendot"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/btn_navi2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/reddot"
                    android:src="@drawable/red_circle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/btn_navi2"
                    app:layout_constraintTop_toTopOf="@+id/btn_navi2"
                    app:layout_constraintBottom_toBottomOf="@id/btn_navi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/btn_navi2"
                    android:text="to"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:minHeight="30dp"
                    android:gravity="center_vertical"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/reddot"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_navi1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
                android:id="@+id/exchange"
                android:src="@drawable/exchange"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_height="30dp"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/bg_white_circle2"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/btn"
                android:text="规划"
                android:layout_margin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@android:color/white"
                android:background="@drawable/selector_blue_reng"
                app:layout_constraintRight_toLeftOf="@+id/ar_navi"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
        <Button
                android:id="@+id/navi"
                android:text="导航"
                app:layout_constraintTop_toTopOf="@+id/btn"
                android:textColor="@android:color/white"
                android:background="@drawable/selector_blue_reng"
                app:layout_constraintLeft_toRightOf="@+id/ar_navi"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>
        <Button
                android:id="@+id/ar_navi"
                android:text="AR导航"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="@+id/btn"
                android:background="@drawable/selector_blue_reng"
                app:layout_constraintLeft_toRightOf="@+id/btn"
                app:layout_constraintRight_toLeftOf="@+id/navi"
                app:layout_constraintBottom_toBottomOf="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>